{% extends 'layout.html.twig' %}

{% block title %} Categories {% endblock %}
{% block body %}
    <section>
        <h1>Categories</h1>
        <ul>
            {% for category in categories %}
                <li><a href="category/{{ category.id }}" >{{ category.name }}</a></li>
            {% endfor %}
        </ul>
        <a href="/">Back to items</a>
    </section>
{% endblock %}

